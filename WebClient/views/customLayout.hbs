{{!-- cssFile[{fileName}], jsFile[{fileName}], title, themeColor, autorefresh --}}
<!DOCTYPE html>
<html>

<head>
	<!-- General information about the website -->

	<!-- Set charset for ä,ö,ü,...: -->
	<meta charset="UTF-8">
	<!-- Scale everything for example for mobile device use: -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- CSS files -->
	{{#each cssFile}}
	<link rel="stylesheet" href="/stylesheets/{{fileName}}.css"> {{/each}}

	<!-- JS files -->
	{{#each jsFile}}
	<script src="/scripts/{{fileName}}.js"></script> {{/each}}


	<!-- Information about the website -->

	<!-- Title of the site: -->
	<title>{{title}}</title>

	<!-- BG color -->
	<meta name="theme-color" content="{{themeColor}}" />


	<!-- Favicons -->

	<!-- Only Firefox tag: -->
	<link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg">
	<!-- Apple icons: -->
	<link rel="apple-touch-icon" href="/favicons/favicon-180x180.png" />
	<meta name="apple-mobile-web-app-title" content="MusicVideoManger">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<link rel="mask-icon" href="/favicons/favicon.svg" color="#000000" />
	<!-- Normal png favicons: -->
	<link rel="icon" type="image/png" href="/favicons/favicon-16x16.png" sizes="16x16" />
	<link rel="icon" type="image/png" href="/favicons/favicon-32x32.png" sizes="32x32" />
	<link rel="icon" type="image/png" href="/favicons/favicon-64x64.png" sizes="64x64" />
	<link rel="icon" type="image/png" href="/favicons/favicon-94x94.png" sizes="94x94" />
	<link rel="icon" type="image/png" href="/favicons/favicon-128x128.png" sizes="128x128" />
	<link rel="icon" type="image/png" href="/favicons/favicon-160x160.png" sizes="160x160" />
	<link rel="icon" type="image/png" href="/favicons/favicon-180x180.png" sizes="180x180" />
	<link rel="icon" type="image/png" href="/favicons/favicon-194x194.png" sizes="194x194" />
	<link rel="icon" type="image/png" href="/favicons/favicon-256x256.png" sizes="256x256" />
	<link rel="icon" type="image/png" href="/favicons/favicon-512x512.png" sizes="512x512" />
	<link rel="shortcut icon" type="image/x-icon" href="/favicons/favicon.ico" />


	<!-- Special Chrome tags -->
	<meta name="application-name" content="MusicVideoManager" /> {{#if autorefresh}}
	<!-- Tag for refreshing the page every some time (seconds) -> Use this for the live playlist -->
	<meta http-equiv="refresh" content="30"> {{/if}}

</head>

<body>
	{{{body}}}
</body>

</html>