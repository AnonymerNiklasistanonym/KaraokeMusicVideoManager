<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="430.0" prefHeight="400.0" prefWidth="430.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="anonymerniklasistanonym.karaokemusicvideomanager.desktopclient.gui.frames.MainWindowController">
   <top>
      <VBox prefHeight="73.0" prefWidth="427.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar style="-fx-background-color: white;">
              <menus>
                <Menu mnemonicParsing="false" text="Export">
                  <items>
                        <Menu fx:id="menuButtonWebsites" mnemonicParsing="false" text="Website">
                          <items>
                            <MenuItem fx:id="menuButtonHtmlStatic" mnemonicParsing="false" text="Static List" />
                              <MenuItem fx:id="menuButtonHtmlSearch" mnemonicParsing="false" text="Searchable List" />
                              <MenuItem fx:id="menuButtonHtmlParty" mnemonicParsing="false" text="Party List" />
                          </items>
                        </Menu>
                    <MenuItem fx:id="menuButtonCsv" mnemonicParsing="false" text="CSV" />
                        <MenuItem fx:id="menuButtonJson" mnemonicParsing="false" text="JSON" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Network">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Reconnect" />
                        <MenuItem mnemonicParsing="false" text="Change Login" />
                        <MenuItem mnemonicParsing="false" text="Setup The Server" />
                      <MenuItem mnemonicParsing="false" text="Reset Network Settings" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Save &amp; Restore">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Save Configuration" />
                        <MenuItem mnemonicParsing="false" text="Load/Restore Configuration" />
                        <MenuItem mnemonicParsing="false" text="Reset Everything" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Language" />
                    <MenuItem mnemonicParsing="false" text="Random Songs Number" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="About">
                    <items>
                      <MenuItem fx:id="aboutButton" mnemonicParsing="false" onAction="#openAboutWindow" text="About" />
                        <MenuItem fx:id="helpButton" mnemonicParsing="false" text="Help">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="H" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                    </items>
                  </Menu>
              </menus>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </MenuBar>
            <HBox maxHeight="50.0" prefHeight="50.0" prefWidth="427.0" style="-fx-background-color: white; -fx-background-radius: 0px;">
               <children>
                  <Label fx:id="searchLabel" text="Search:">
                     <HBox.margin>
                        <Insets right="10.0" top="2.0" />
                     </HBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="searchBox" onAction="#openTopMusicVideoFile" prefHeight="25.0" prefWidth="103.0" promptText="Search for music videos..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="youTubeButton" mnemonicParsing="false" onAction="#searchOnYouTube" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-border-radius: 20; -fx-border-color: none;" text="YouTube" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="randomButton" mnemonicParsing="false" styleClass="-fx-background-color" text="Random" />
                  <Region HBox.hgrow="ALWAYS" />
                  <ToggleButton fx:id="networkButton" mnemonicParsing="false" onAction="#openServerLoginWindow" text="Network" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <HBox style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <TabPane fx:id="tabView" style="-fx-border-color: transparent; -fx-background-color: white;" tabClosingPolicy="UNAVAILABLE" HBox.hgrow="ALWAYS">
              <tabs>
                <Tab fx:id="musicVideoTableTab" onSelectionChanged="#clearSearch" text="Music Video List">
                     <content>
                        <TableView id="my-table" fx:id="musicVideoTable" onMouseClicked="#openMusicVideoFileLeftClick" onMousePressed="#mousePressed" onSort="#clearSelectionMusicVideoFileTable" style="-fx-background-color: white;">
                          <columns>
                            <TableColumn fx:id="columnIndex" editable="false" prefWidth="10.0" style="-fx-alignment: CENTER_RIGHT;" text="#" />
                              <TableColumn fx:id="columnArtist" editable="false" minWidth="90.0" text="Artist" />
                            <TableColumn fx:id="columnTitle" editable="false" minWidth="180.0" text="Title" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <contextMenu>
                              <ContextMenu>
                                <items>
                                    <MenuItem fx:id="contextMusicVideoPlaylist" disable="true" mnemonicParsing="false" onAction="#addVideoToPlaylist" text="Add to Playlist" />
                                    <MenuItem fx:id="contextMusicVideoDirectory" mnemonicParsing="false" onAction="#showDirectoryOfFileInExplorer" text="Show Directory" />
                                    <MenuItem fx:id="contextMusicVideoIgnore" disable="true" mnemonicParsing="false" onAction="#ignoreMusicVideoFile" text="Ignore File" />
                                    <MenuItem fx:id="contextMusicVideoClear" mnemonicParsing="false" onAction="#clearSelectionMusicVideoFileTable" text="Clear Selection" />
                                    <MenuItem fx:id="contextMusicVideoRefresh" mnemonicParsing="false" onAction="#refreshMusicVideoFileTable" text="Refresh Table" />
                                </items>
                              </ContextMenu>
                           </contextMenu>
                        </TableView>
                     </content>
                </Tab>
                <Tab text="Playlist">
                     <content>
                        <TableView style="-fx-background-color: white;">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Time" />
                            <TableColumn prefWidth="75.0" text="Title" />
                              <TableColumn prefWidth="75.0" text="Artist" />
                              <TableColumn prefWidth="75.0" text="Author" />
                              <TableColumn prefWidth="75.0" text="Comment" />
                          </columns>
                        </TableView>
                     </content>
                </Tab>
                  <Tab onSelectionChanged="#clearSearch" text="Source Folder/s">
                     <content>
                        <VBox>
                           <children>
                              <TableView fx:id="directoryPathTable" minHeight="150.0" onMouseClicked="#openDirectoryLeftClick" onMousePressed="#mousePressed" onSort="#clearSelectionMusicVideoPathTable" VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="columnFilePath" prefWidth="400.0" text="Directory Path" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                                 <contextMenu>
                                    <ContextMenu>
                                      <items>
                                          <MenuItem fx:id="contextPathRemove" mnemonicParsing="false" onAction="#removeDirectory" text="Remove Source" />
                                          <MenuItem fx:id="contextPathWrongFormatted" mnemonicParsing="false" onAction="#openWrongFormattedFilesWindow" text="Show wrong formatted Files" />
 										  <MenuItem fx:id="contextPathClear" mnemonicParsing="false" onAction="#clearSelectionMusicVideoPathTable" text="Clear Selection" />
                                          <MenuItem fx:id="contextPathRefresh" mnemonicParsing="false" onAction="#refreshMusicVideoPathTable" text="Refresh Table" />
                                </items>
                                    </ContextMenu>
                                 </contextMenu>
                              </TableView>
                              <HBox alignment="TOP_CENTER" minHeight="-Infinity" spacing="20.0" VBox.vgrow="NEVER">
                                 <children>
                                    <Button fx:id="addPathButton" mnemonicParsing="false" onAction="#addSourceFolderDialog" text="Add source" />
                                    <Button fx:id="removePathButton" mnemonicParsing="false" onAction="#removeDirectory" text="Remove source" />
                                 </children>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                              </HBox>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
      </HBox>
   </center>
</BorderPane>
